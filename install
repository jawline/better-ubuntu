#!/usr/bin/env bash

sudo apt install vim-gtk

CDIR="$(pwd)"
TDIR="$(mktemp -d)"

cd "${TDIR}"

git clone https://github.com/jawline/vim.git res
cd res

./install_node
./install_rust

#Install custom bashrc
cat .bashrc >> ~/.bashrc

cp -fr .vimrc ~/
cp -fr .vim/ ~/
cp -fr .tmux.conf ~/

cd "${CDIR}"
rm -rf "${TDIR}"
